<div class="row hike-div text-center">
  <div class="col-md-3 hike-info-section">
    <h3><%= hike.date.strftime("%A, %B %d, %Y") %></h3>
  </div>
  <div class="col-md-3 hike-info-section">
    <h3><%= link_to hike.trail.name, hike.trail %></h3>
    <p>Trail</p>
  </div>
  <div class="col-md-3 hike-info-section">
    <h3><%= hike.trail.distance %> mi</h3>
    <p>Distance Hiked</p>
  </div>
  <div class="col-md-3 hike-info-section">
    <h3><%= hike.trail.elevation %> ft</h3>
    <p>Elevation Gained</p>
  </div>
</div>
