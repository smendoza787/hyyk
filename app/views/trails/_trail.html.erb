<div class="trail-div text-center">
  <div class="trail-stuff">
    <div class="trail-info">
      <%= image_tag("hyyk-img.jpg", class: "hyyk-img", alt: "hyyk") %>
      <h2><%= link_to trail.name, trail %></h2>
      <p><i class="fa fa-location-arrow" aria-hidden="true"></i> <%= trail.location %></p>
    </div>
    <div class="trail-attributes">
      <div class="trail-attributes-child">
        <h3><%= "#{trail.distance} mi." %></h3>
        <p>Distance</p>
      </div>
      <div class="trail-attributes-child">
        <h3><%= "#{trail.elevation} ft" %></h3>
        <p>Elevation</p>
      </div>
      <div class="trail-attributes-child">
        <h3><%= trail.trail_type %></h3>
        <p>Trail Type</p>
      </div>
    </div>
  </div>
  <button id="show-users-btn-<%= trail.id %>" class="show-users-btn btn btn-danger" data-id="<%= trail.id %>" data-dropped="false">Show Hyykers</button>
  <div id="trail-users-<%= trail.id %>"></div>
</div>
