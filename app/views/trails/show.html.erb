<div class="row text-center hike-title">
  <h1><%= @trail.name %></h1>
  <h3><%= @trail.location %></h3>
</div>

<div class="row text-center hike-info">
  <div class="col-md-3 hike-info-section">
    <h2><%= "#{@trail.distance} mi." %></h2>
    <p>Distance</p>
  </div>
  <div class="col-md-3 hike-info-section">
    <h2><%= "#{@trail.elevation} ft" %></h2>
    <p>Elevation</p>
  </div>
  <div class="col-md-3 hike-info-section">
    <h2><%= @trail.trail_type %></h2>
    <p>Trail Type</p>
  </div>
  <div class="col-md-3 hike-info-section">
    <h4>Have you hiked this?</h4>
    <p><%= link_to "Log Hike", new_trail_hike_path(@trail), class: "btn btn-primary" %></p>
  </div>
</div>

<div class="row hyyker-title text-center">
  <h2><%= @trail.name %> Hyykers</h2>
</div>


<div class="row hyyker-list">
  <div class="col-md-10 col-md-offset-1">
    <%= render @trail.users.uniq %>
  </div>
</div>
