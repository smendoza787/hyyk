<div class="row text-center hike-title">
  <h1><%= @user.email %>'s Hyyking Page</h1>
</div>

<div class="row text-center hike-info">
  <div class="col-md-4 hike-info-section">
    <h2><%= @user.total_hikes %></h2>
    <p>Total Hikes</p>
  </div>
  <div class="col-md-4 hike-info-section">
    <h2><%= @user.total_elevation_climbed %> ft.</h2>
    <p>Total Elevation Climbed</p>
  </div>
  <div class="col-md-4 hike-info-section">
    <h2><%= @user.total_distance_hiked %> mi.</h2>
    <p>Total Distance Hiked</p>
  </div>
</div>

<div class="hyyk-records">
  <% if @user.hikes.any? %>
  <p><strong>Longest Hyyk</strong></p>
    <p><%= @user.longest_hike.distance %> miles</p>
    <p><strong>Tallest Hyyk</strong></p>
    <p><%= @user.tallest_hike.elevation %> feet</p>
  <% else %>
    <p>Start hiking to set some records!</p>
  <% end %>
</div>

<h2>Hyyks</h2>
<%= render @user.hikes %>
